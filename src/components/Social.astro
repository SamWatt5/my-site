---
const { address, text, img } = Astro.props;
---

<div class="social-link">
    <a href={address} target="_blank" rel="noopener noreferrer">
        <img src={img} alt={text} class="social-icon" />
        <span>{text}</span>
    </a>
</div>

<style>
    .social-link a {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem;
        color: #94a3b8;
        text-decoration: none;
        transition: color 0.2s ease;
        border-radius: 4px;
    }

    .social-link a:hover {
        color: #3b82f6;
        background-color: rgba(59, 130, 246, 0.1);
    }

    .social-icon {
        width: 20px;
        height: 20px;
        filter: brightness(0.8);
    }

    .social-link a:hover .social-icon {
        filter: brightness(1) hue-rotate(200deg);
    }
</style>
