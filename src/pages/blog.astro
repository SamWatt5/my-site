---
import BlogPost from "../components/BlogPost.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
const allPosts = await Astro.glob("./posts/*.md");
const pageTitle = "Technical Blog - Sam Watts";
---

<BaseLayout pageTitle={pageTitle}>
    <div class="max-w-6xl mx-auto">
        <!-- Blog Header -->
        <section class="text-center mb-16">
            <h2 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-6 transition-colors duration-300">📝 Technical Blog</h2>
            <p class="text-lg text-gray-600 dark:text-gray-400 max-w-4xl mx-auto leading-relaxed transition-colors duration-300">Welcome to my technical blog! Here I share insights, lessons learned, and experiences from my journey as a computer science student. From coding challenges to project deep-dives, this is where I document my growth and learning in the world of software development.</p>
        </section>

        <!-- Blog Posts -->
        <section class="mb-16">
            <div class="grid gap-6">
                {
                    allPosts.length > 0 ? (
                        allPosts.map((post: any) => <BlogPost post={post} />)
                    ) : (
                        <div class="text-center py-16 bg-white dark:bg-dark-800 rounded-2xl border border-gray-200 dark:border-gray-700 transition-colors duration-300">
                            <div class="text-6xl mb-4">📚</div>
                            <h3 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-4 transition-colors duration-300">Coming Soon!</h3>
                            <p class="text-gray-600 dark:text-gray-400 max-w-md mx-auto transition-colors duration-300">I'm currently working on some exciting blog posts. Check back soon for technical insights, project walkthroughs, and learning experiences!</p>
                        </div>
                    )
                }
            </div>
        </section>

        <!-- Topics Section -->
        <section class="bg-gradient-to-r from-primary-50 to-purple-50 dark:from-primary-900/20 dark:to-purple-900/20 rounded-2xl p-8 border border-primary-200 dark:border-primary-800 transition-colors duration-300">
            <h3 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-8 text-center transition-colors duration-300">What I Write About</h3>
            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
                <div class="bg-white dark:bg-dark-800 p-6 rounded-xl border border-gray-200 dark:border-gray-700 hover:shadow-lg transition-all duration-300 hover:scale-105 group">
                    <div class="text-3xl mb-4 group-hover:scale-110 transition-transform duration-300">🔧</div>
                    <h4 class="text-lg font-bold text-gray-900 dark:text-gray-100 mb-3 transition-colors duration-300">Project Walkthroughs</h4>
                    <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed transition-colors duration-300">Detailed breakdowns of my coding projects and the challenges I faced</p>
                </div>
                <div class="bg-white dark:bg-dark-800 p-6 rounded-xl border border-gray-200 dark:border-gray-700 hover:shadow-lg transition-all duration-300 hover:scale-105 group">
                    <div class="text-3xl mb-4 group-hover:scale-110 transition-transform duration-300">🎓</div>
                    <h4 class="text-lg font-bold text-gray-900 dark:text-gray-100 mb-3 transition-colors duration-300">Learning Journey</h4>
                    <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed transition-colors duration-300">Insights and reflections on computer science concepts and technologies</p>
                </div>
                <div class="bg-white dark:bg-dark-800 p-6 rounded-xl border border-gray-200 dark:border-gray-700 hover:shadow-lg transition-all duration-300 hover:scale-105 group">
                    <div class="text-3xl mb-4 group-hover:scale-110 transition-transform duration-300">💻</div>
                    <h4 class="text-lg font-bold text-gray-900 dark:text-gray-100 mb-3 transition-colors duration-300">Technical Skills</h4>
                    <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed transition-colors duration-300">Deep dives into programming languages, frameworks, and development tools</p>
                </div>
                <div class="bg-white dark:bg-dark-800 p-6 rounded-xl border border-gray-200 dark:border-gray-700 hover:shadow-lg transition-all duration-300 hover:scale-105 group">
                    <div class="text-3xl mb-4 group-hover:scale-110 transition-transform duration-300">🚀</div>
                    <h4 class="text-lg font-bold text-gray-900 dark:text-gray-100 mb-3 transition-colors duration-300">Industry Insights</h4>
                    <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed transition-colors duration-300">Thoughts on software development trends and career preparation</p>
                </div>
            </div>
        </section>
    </div>
</BaseLayout>
