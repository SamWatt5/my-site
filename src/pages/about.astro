---
import BaseLayout from "../layouts/BaseLayout.astro";

const profile = {
    firstName: "Sam",
    lastName: "Watts",
    title: "Computer Science Student",
    location: "Scotland",
    age: 20,
    email: "sam.watts005@gmail.com",
    university: "University Of Dundee",
};

const technicalSkills = {
    "Programming Languages": ["Python", "Java", "C++", "C", "JavaScript"],
    "Web Technologies": ["HTML5", "CSS", "REST APIs", "Node.js"],
    "Tools & Technologies": ["Git", "VS Code", "Visual Studio", "Figma"],
    Databases: ["MySQL", "PostgreSQL", "MongoDB"],
    "Currently Learning": ["Unity", "Godot", "C++"],
};

const interests = ["Full-Stack Web Development", "Game Design", "AI/Machine Learning", "Guitar Playing", "Photography", "Hackathons & Competitions"];

const education = {
    degree: "Computer Science",
    institution: "University Of Dundee",
    year: "2023-2027 (Expected)",
    relevantCourses: ["Data Structures & Algorithms", "Object-Oriented Programming", "Database Systems", "Web Development", "Software Engineering"],
};
---

<BaseLayout pageTitle="About Sam Watts">
    <div class="max-w-4xl mx-auto">
        <!-- Profile Section -->
        <section class="mb-12">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-6 transition-colors duration-300">About Me</h2>
            <p class="text-xl text-primary-600 dark:text-primary-400 mb-4 font-medium transition-colors duration-300">
                Hi! I'm {profile.firstName}
                {profile.lastName}, a Computer Science student at the University of Dundee with a passion for software development!
            </p>
            <p class="text-lg text-gray-600 dark:text-gray-400 leading-relaxed transition-colors duration-300">
                I've worked on projects ranging from a spotify-integrated social playlist-making web app to a sustainability focused Minecraft plugin, to my currrent project, turning a guitar input into a MIDI output.
                <br /><br />
                I enjoy all aspects of tech, whether it's full-stack web development, game design, AI/ML or anything else! I'm also an active member of the University of Dundee Computing Society, where I've competed in multiple hackathons, leading agile teams and building working proWtotypes under tight deadlines.
                <br /><br />
                Outside of coding, you'll usually find me playing one of my many guitars, experimenting with fun new hobbies, such as photography or learning interesting fun facts about the world around me!
            </p>
        </section>

        <!-- Education Section -->
        <section class="mb-12">
            <h3 class="text-2xl font-semibold text-gray-900 dark:text-gray-100 mb-6 transition-colors duration-300">ðŸŽ“ Education</h3>
            <div class="bg-white dark:bg-dark-800 p-6 rounded-xl border-l-4 border-accent-500 shadow-md hover:shadow-lg transition-all duration-300">
                <h4 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-2 transition-colors duration-300">{education.degree}</h4>
                <p class="text-lg text-accent-600 dark:text-accent-400 font-medium transition-colors duration-300">{education.institution}</p>
                <p class="text-gray-600 dark:text-gray-400 mb-4 transition-colors duration-300">{education.year}</p>
                <div>
                    <h5 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-3 transition-colors duration-300">Relevant Coursework:</h5>
                    <ul class="grid md:grid-cols-2 gap-2">
                        {
                            education.relevantCourses.map((course) => (
                                <li class="flex items-center text-gray-700 dark:text-gray-300 transition-colors duration-300">
                                    <span class="w-2 h-2 bg-accent-500 rounded-full mr-3 flex-shrink-0" />
                                    {course}
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>
        </section>

        <!-- Technical Skills Section -->
        <section class="mb-12">
            <h3 class="text-2xl font-semibold text-gray-900 dark:text-gray-100 mb-6 transition-colors duration-300">ðŸ’» Technical Skills</h3>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                {
                    Object.entries(technicalSkills).map(([category, skills]) => (
                        <div class="bg-white dark:bg-dark-800 p-6 rounded-xl border-l-4 border-primary-500 shadow-md hover:shadow-lg transition-all duration-300 hover:scale-105">
                            <h4 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-4 transition-colors duration-300">{category}</h4>
                            <div class="flex flex-wrap gap-2">
                                {skills.map((skill) => (
                                    <span class="px-3 py-1 bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300 rounded-full text-sm font-medium transition-colors duration-300">{skill}</span>
                                ))}
                            </div>
                        </div>
                    ))
                }
            </div>
        </section>

        <!-- Interests Section -->
        <section class="mb-12">
            <h3 class="text-2xl font-semibold text-gray-900 dark:text-gray-100 mb-6 transition-colors duration-300">ðŸŽ¯ Interests & Passions</h3>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
                {
                    interests.map((interest) => (
                        <div class="bg-white dark:bg-dark-800 p-4 rounded-lg text-center border border-gray-200 dark:border-gray-700 hover:border-primary-300 dark:hover:border-primary-600 transition-all duration-300 hover:shadow-md">
                            <span class="text-gray-700 dark:text-gray-300 font-medium transition-colors duration-300">{interest}</span>
                        </div>
                    ))
                }
            </div>
        </section>

        <!-- Career Goals Section -->
        <section class="mb-12">
            <h3 class="text-2xl font-semibold text-gray-900 dark:text-gray-100 mb-6 transition-colors duration-300">ðŸš€ Career Goals</h3>
            <div class="bg-gradient-to-r from-primary-50 to-accent-50 dark:from-primary-900/20 dark:to-accent-900/20 p-6 rounded-xl border border-primary-200 dark:border-primary-800 transition-colors duration-300">
                <p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed transition-colors duration-300">I'm currently seeking a summer internship position, for summer 2026. My goal is to contribute to innovative software solutions, whilst continuing to grow my skills as a developer, and eventually specialize in a specific area of computing.</p>
            </div>
        </section>

        <!-- Contact Section -->
        <section class="mb-12">
